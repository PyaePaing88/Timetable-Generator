<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane
        prefHeight="-Infinity" prefWidth="-Infinity"
        styleClass="body" stylesheets="@../../style/styles.css"
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.timetablegenerator.controller.user.userListController">
    <top>
        <VBox prefHeight="100.0" prefWidth="100.0" spacing="10"
              styleClass="data_list_header" BorderPane.alignment="CENTER">
            <padding>
                <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="content-header" text="User List"/>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="searchField" onKeyReleased="#handleSearch" prefWidth="300"
                               promptText="Search..." styleClass="search_field"/>

                    <Label text="Rows:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80" styleClass="rowsPerPageCombo"/>

                    <Button onAction="#openCreateForm" styleClass="tg-btn, tg-btn-primary" text="Add New User"/>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" styleClass="data_list_body" BorderPane.alignment="CENTER">
            <padding>
                <javafx.geometry.Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="40" text="ID"/>
                        <TableColumn fx:id="colName" prefWidth="150" text="Name"/>
                        <TableColumn fx:id="colEmail" prefWidth="180" text="Email"/>
                        <TableColumn fx:id="colPhone" prefWidth="120" text="Phone"/>
                        <TableColumn fx:id="colRole" prefWidth="100" text="Role"/>
                        <TableColumn fx:id="colActive" prefWidth="60" text="Active"/>
                        <TableColumn fx:id="colActions" prefWidth="100" text="Actions"/>
                    </columns>
                </TableView>
                <Pagination fx:id="pagination" styleClass="pagination"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
