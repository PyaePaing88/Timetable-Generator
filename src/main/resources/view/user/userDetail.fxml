<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" prefWidth="450" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.user.userDetailController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="User Details" styleClass="content-header"/>
    <Separator/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0"/>
        </columnConstraints>

        <children>
            <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtId" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtName" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Email Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEmail" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPhone" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Role:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtRole" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Account Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtStatus" editable="false" styleClass="text-field-readonly"
                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Settings:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <CheckBox fx:id="chkChangePassword" text="Force PW Change" disable="true"
                      GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#closeWindow" prefWidth="90"
                styleClass="tg-btn, tg-btn-secondary"/>
    </HBox>
</VBox>