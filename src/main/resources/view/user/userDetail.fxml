<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.timetablegenerator.controller.user.userDetailController">
    <children>
        <Label text="Professor Details">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <Separator />
        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <children>
                <Label text="User ID:" GridPane.rowIndex="0" />
                <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Full Name:" GridPane.rowIndex="1" />
                <TextField fx:id="txtName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Email Address:" GridPane.rowIndex="2" />
                <TextField fx:id="txtEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Phone Number:" GridPane.rowIndex="3" />
                <TextField fx:id="txtPhone" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Role:" GridPane.rowIndex="4" />
                <TextField fx:id="txtRole" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Account Status:" GridPane.rowIndex="5" />
                <TextField fx:id="txtStatus" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Force PW Change:" GridPane.rowIndex="6" />
                <CheckBox fx:id="chkChangePassword" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Close" onAction="#closeWindow" prefWidth="80.0" />
        </HBox>
    </children>
    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
</VBox>