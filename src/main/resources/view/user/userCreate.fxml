<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" prefWidth="450" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.user.userCreateController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Create New User" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Separator/>

    <GridPane hgap="10" vgap="12">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter full name" GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="example@mail.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="+123456789" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Minimum 6 characters" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleComboBox" prefWidth="200" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Settings:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <HBox spacing="15" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <CheckBox fx:id="activeCheckBox" text="Is Active" selected="true"/>
            <CheckBox fx:id="changePassCheckBox" text="Force PW Change" selected="true"/>
        </HBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="80"/>
        <Button text="Create User" onAction="#handleSave" prefWidth="120"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>