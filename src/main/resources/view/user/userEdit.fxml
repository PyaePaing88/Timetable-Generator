<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" prefWidth="450" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.user.userEditController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Edit User Information" styleClass="content-header"/>
    <Separator/>

    <GridPane hgap="15" vgap="15">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter full name"
                   GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="example@mail.com"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="+123456789"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleComboBox" prefWidth="250"
                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Settings:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <HBox spacing="20" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <CheckBox fx:id="activeCheckBox" text="Is Active"/>
            <CheckBox fx:id="changePassCheckBox" text="Force PW Change"/>
        </HBox>
    </GridPane>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="90"
                styleClass="tg-btn, tg-btn-secondary"/>
        <Button text="Save Changes" onAction="#handleSave" prefWidth="130"
                styleClass="tg-btn, tg-btn-primary"/>
    </HBox>
</VBox>