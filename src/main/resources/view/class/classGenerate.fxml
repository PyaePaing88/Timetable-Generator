<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" prefWidth="450" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.classes.classGenerateController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Create New Class" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Separator/>

    <GridPane hgap="10" vgap="12">
        <Label text="Select Department:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="deptComboBox" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Select Academic Levels:" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
        <ScrollPane prefHeight="150" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <VBox fx:id="academicLevelContainer" spacing="5" style="-fx-padding: 5;"/>
        </ScrollPane>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="80"/>
        <Button text="Generate Classes" onAction="#handleGenerate" prefWidth="150"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>