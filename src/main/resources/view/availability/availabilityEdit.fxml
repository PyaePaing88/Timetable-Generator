<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import jfxtras.scene.control.LocalDateTimeTextField?>

<VBox spacing="15" prefWidth="480" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.availability.availabilityEditController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Edit Availability Record" styleClass="content-header"/>
    <Separator/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="130.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="250.0"/>
        </columnConstraints>

        <children>
            <Label text="Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="statusField" promptText="Update status..."
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Day:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="dayComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>

            <Label text="Period:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="periodComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"
                      disable="true"/>

            <Label text="Remark:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
            <TextArea fx:id="remarkArea" prefHeight="100" wrapText="true" promptText="Update notes..."
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <Region VBox.vgrow="ALWAYS" prefHeight="20"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100"
                styleClass="tg-btn, tg-btn-secondary"/>
        <Button text="Update Changes" onAction="#handleSave" prefWidth="150"
                styleClass="tg-btn, tg-btn-primary"/>
    </HBox>
</VBox>