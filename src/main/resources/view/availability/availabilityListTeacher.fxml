<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="-Infinity" prefWidth="-Infinity"
            stylesheets="@../../style/styles.css" styleClass="body"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetablegenerator.controller.availability.availabilityListTeacherController">
    <top>
        <VBox prefHeight="100.0" prefWidth="100.0" spacing="10"
              styleClass="data_list_header" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label text="Manage Unavailability Time" styleClass="content-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" prefWidth="300" promptText="Search by teacher, status or remark..."
                               onKeyReleased="#handleSearch" styleClass="search_field"/>

                    <Label text="Rows:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80" styleClass="rowsPerPageCombo"/>

                    <Button text="Add New Availability" onAction="#openCreateForm" styleClass="tg-btn, tg-btn-primary"/>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" styleClass="data_list_body" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <TableView fx:id="availabilityTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colId" text="ID"
                                     minWidth="60.0" prefWidth="60.0" maxWidth="60.0"/>

                        <TableColumn fx:id="colActions" text="Actions"
                                     minWidth="110.0" prefWidth="110.0" maxWidth="110.0"/>

                        <TableColumn fx:id="colTeacher" text="Teacher Name"
                                     minWidth="150.0" prefWidth="200.0" maxWidth="400.0"/>

                        <TableColumn fx:id="colStatus" text="Status"
                                     minWidth="100.0" prefWidth="120.0" maxWidth="150.0"/>

                        <TableColumn fx:id="colRemark" text="Remark"
                                     minWidth="150.0" prefWidth="250.0" maxWidth="500.0"/>

                        <TableColumn fx:id="colDay" text="Day"
                                     minWidth="100.0" prefWidth="120.0" maxWidth="180.0"/>

                        <TableColumn fx:id="colPeriod" text="Period"
                                     minWidth="80.0" prefWidth="100.0" maxWidth="150.0"/>

                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <Pagination fx:id="pagination" styleClass="pagination"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>