<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="-Infinity" prefWidth="-Infinity"
            stylesheets="@../../style/styles.css" styleClass="body"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetablegenerator.controller.course.courseListController">
    <top>
        <VBox prefHeight="100.0" prefWidth="100.0" spacing="10"
              styleClass="data_list_header" BorderPane.alignment="CENTER">
            <padding>
                <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label text="Course List" styleClass="content-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" prefWidth="300" promptText="Search..."
                               onKeyReleased="#handleSearch" styleClass="search_field"/>

                    <Label text="Rows:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80" styleClass="rowsPerPageCombo"/>

                    <Button text="Add New Course" onAction="#openCreateForm" styleClass="tg-btn, tg-btn-primary"/>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" styleClass="data_list_body" BorderPane.alignment="CENTER">
            <padding>
                <javafx.geometry.Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <TableView fx:id="courseTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="colId" text="ID"
                                     minWidth="60.0" prefWidth="60.0" maxWidth="60.0"/>

                        <TableColumn fx:id="colActions" text="Actions"
                                     minWidth="110.0" prefWidth="110.0" maxWidth="110.0"/>

                        <TableColumn fx:id="colName" text="Course Name"
                                     minWidth="150.0" prefWidth="250.0" maxWidth="600.0"/>

                        <TableColumn fx:id="colSubject_code" text="Subject Code"
                                     minWidth="100.0" prefWidth="120.0" maxWidth="150.0"/>

                        <TableColumn fx:id="colDept" text="Department"
                                     minWidth="120.0" prefWidth="150.0" maxWidth="250.0"/>

                        <TableColumn fx:id="colLevel" text="Year"
                                     minWidth="60.0" prefWidth="80.0" maxWidth="100.0"/>

                        <TableColumn fx:id="colPeriodPerWeek" text="Period"
                                     minWidth="60.0" prefWidth="80.0" maxWidth="100.0"/>

                    </columns>
                </TableView>
                <Pagination fx:id="pagination" styleClass="pagination"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>