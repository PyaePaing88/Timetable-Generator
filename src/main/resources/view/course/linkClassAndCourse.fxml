<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefWidth="750.0" prefHeight="550.0" spacing="15"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.course.linkClassAndCourseController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Manage Course Classes" styleClass="content-header"/>

    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <TableView fx:id="allClassTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colAllClassName" text="Available Classes" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>

        <VBox alignment="CENTER" spacing="20">
            <Button text="→" onAction="#moveToCourse" prefWidth="80"
                    styleClass="tg-btn, tg-btn-success"/>
            <Button text="←" onAction="#moveFromCourse" prefWidth="80"
                    styleClass="tg-btn, tg-btn-danger"/>
        </VBox>

        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <TableView fx:id="courseClassTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCourseClassName" text="Linked Class" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <Separator/>

    <HBox alignment="CENTER_RIGHT" spacing="12">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100"
                styleClass="tg-btn, tg-btn-secondary"/>
        <Button text="Save Changes" onAction="#handleSave" prefWidth="140"
                styleClass="tg-btn, tg-btn-primary"/>
    </HBox>
</VBox>