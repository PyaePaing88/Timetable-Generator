<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@../../style/styles.css" styleClass="main-container"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetablegenerator.controller.timetable.timetableListController">

    <top>
        <VBox spacing="20" styleClass="header-section">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0"/>
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Timetable Management" styleClass="content-header"
                               style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="View and manage generated schedules for all departments"
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 13;"/>
                    </VBox>
                    <Button text="+ Generate New" onAction="#openGenerateModal"
                            styleClass="btn-primary" prefHeight="40" prefWidth="160"/>
                </HBox>

                <Separator prefWidth="200.0"/>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <StackPane alignment="CENTER_LEFT">
                        <TextField fx:id="searchField" prefWidth="350" prefHeight="35"
                                   promptText="Search department or class..."
                                   styleClass="search-input"/>
                    </StackPane>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Show:" style="-fx-text-fill: #7f8c8d;"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="100" prefHeight="35"
                              styleClass="rows-combo"/>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <StackPane VBox.vgrow="ALWAYS">
            <children>
                <ScrollPane fitToWidth="true" styleClass="edge-to-edge-scroll"
                            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                    <content>
                        <FlowPane fx:id="cardContainer" hgap="25" vgap="25"
                                  alignment="TOP_LEFT">
                            <padding>
                                <Insets bottom="20" left="25" right="25" top="10"/>
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>

                <VBox fx:id="noResultsPlaceholder" alignment="CENTER" spacing="15" visible="false">
                    <Label text="No timetables found" style="-fx-font-size: 18; -fx-text-fill: #bdc3c7;"/>
                    <Label text="Try adjusting your search filters" style="-fx-text-fill: #bdc3c7;"/>
                </VBox>
            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>
                <Pagination fx:id="pagination" maxPageIndicatorCount="5" styleClass="modern-pagination"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>