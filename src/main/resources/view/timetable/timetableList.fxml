<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@../../style/styles.css" styleClass="body"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetablegenerator.controller.timetable.timetableListController">

    <top>
        <VBox prefHeight="110.0" spacing="10" styleClass="data_list_header" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>
                <Label text="Timetable Management" styleClass="content-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" prefWidth="350" promptText="Search department or class..."
                               styleClass="search_field"/>
                    <Label text="Rows:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80" styleClass="rowsPerPageCombo"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="btnGenerateNew" onAction="#handleGenerateNew"
                            text="Generate New Timetable" styleClass="tg-btn, tg-btn-primary"/>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" styleClass="data_list_body" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <ScrollPane fitToWidth="true" styleClass="edge-to-edge-scroll"
                                    hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                                    style="-fx-background-color: transparent; -fx-background: transparent;">
                            <content>
                                <FlowPane fx:id="cardContainer" hgap="20" vgap="20" alignment="TOP_LEFT" minWidth="0">
                                    <padding>
                                        <Insets bottom="20" left="15" right="15" top="10"/>
                                    </padding>
                                </FlowPane>
                            </content>
                        </ScrollPane>

                        <VBox fx:id="noResultsPlaceholder" alignment="CENTER" spacing="15" visible="false">
                            <Label text="No timetables found" style="-fx-font-size: 18; -fx-text-fill: #bdc3c7;"/>
                        </VBox>
                    </children>
                </StackPane>
                <Pagination fx:id="pagination" styleClass="pagination"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>