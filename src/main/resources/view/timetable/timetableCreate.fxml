<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" prefWidth="480" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.timetable.timetableCreateController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Generate Weekly Schedule" styleClass="content-header"/>
    <Separator/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="130.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="250.0"/>
        </columnConstraints>

        <children>
            <Label text="Target Department:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>

            <ComboBox fx:id="departmentComboBox" maxWidth="Infinity" prefHeight="35.0"
                      promptText="Select department..."
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <Region VBox.vgrow="ALWAYS" minHeight="20"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100" prefHeight="35"
                styleClass="tg-btn, tg-btn-secondary"/>

        <StackPane alignment="CENTER">
            <children>
                <Button fx:id="generateBtn" text="Generate" onAction="#handleGenerate"
                        prefWidth="140" prefHeight="35"
                        styleClass="tg-btn, tg-btn-primary"/>

                <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0"
                                   visible="false"/>
            </children>
        </StackPane>
    </HBox>
</VBox>