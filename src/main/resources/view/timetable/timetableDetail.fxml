<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" styleClass="form-container" stylesheets="@../../style/styles.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.timetablegenerator.controller.timetable.timetableDetailController">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox HBox.hgrow="ALWAYS">
            <Label fx:id="lblHeaderInfo" text="Weekly Class Schedule"
                   styleClass="content-header" style="-fx-font-size: 22px;"/>
            <Label text="Full weekly breakdown of courses and instructors"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
        </VBox>
    </HBox>

    <Separator/>

    <ScrollPane fitToWidth="true"
                style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
        <content>
            <GridPane fx:id="timetableGrid" styleClass="timetable-grid" alignment="TOP_CENTER">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="110" hgrow="NEVER" halignment="CENTER"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="150" prefWidth="180" hgrow="SOMETIMES"/>
                </columnConstraints>

                <Label text="Day\Period" styleClass="grid-header-day-period" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <Label text="Period 1" styleClass="grid-header-cell" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>
                <Label text="Period 2" styleClass="grid-header-cell" GridPane.columnIndex="2" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>
                <Label text="Period 3" styleClass="grid-header-cell" GridPane.columnIndex="3" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>
                <Label text="Period 4" styleClass="grid-header-cell" GridPane.columnIndex="4" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>
                <Label text="Period 5" styleClass="grid-header-cell" GridPane.columnIndex="5" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>
                <Label text="Period 6" styleClass="grid-header-cell" GridPane.columnIndex="6" GridPane.rowIndex="0"
                       maxWidth="Infinity"/>

                <Label text="MON" styleClass="day-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label text="TUE" styleClass="day-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label text="WED" styleClass="day-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label text="THU" styleClass="day-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <Label text="FRI" styleClass="day-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            </GridPane>
        </content>
    </ScrollPane>
</VBox>