<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="-Infinity" prefWidth="-Infinity"
            stylesheets="@../../style/styles.css" styleClass="body"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetablegenerator.controller.timeSlot.timeSlotListController">
    <top>
        <VBox prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER" spacing="10">
            <padding>
                <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label text="Time Slot List" styleClass="content-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" prefWidth="300" promptText="Search by day..."
                               onKeyReleased="#handleSearch"/>
                    <Label text="Rows:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80"/>
                    <Button text="Add New Time Slot" onAction="#openCreateForm" styleClass="btn-primary"/>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <javafx.geometry.Insets bottom="10" left="10" right="10" top="0"/>
            </padding>
            <children>
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colDay" text="Day" prefWidth="120"/>
                        <TableColumn fx:id="colPeriod" text="Period" prefWidth="100"/>
                        <TableColumn fx:id="colStartTime" text="Start Time" prefWidth="150"/>
                        <TableColumn fx:id="colEndTime" text="End Time" prefWidth="150"/>
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="120"/>
                    </columns>
                </TableView>
                <Pagination fx:id="pagination"/>
            </children>
        </VBox>
    </center>
</BorderPane>