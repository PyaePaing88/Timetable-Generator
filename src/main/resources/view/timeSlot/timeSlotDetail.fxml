<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" prefWidth="400" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.timeSlot.timeSlotDetailController"
      style="-fx-background-color: white;">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <VBox spacing="5">
        <Label text="Time Slot Details" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label fx:id="idLabel" text="ID: 0" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        <Separator/>
    </VBox>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="100" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
        </columnConstraints>

        <Label text="Day:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="dayLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Period:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="periodLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Start Time:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="startTimeLabel" text="00:00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="End Time:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="endTimeLabel" text="00:00" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Close" onAction="#handleClose" prefWidth="100"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>