<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" prefWidth="450" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.timeSlot.timeSlotEditController"
      styleClass="form-container" stylesheets="@../../style/styles.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Edit Time Slot" styleClass="content-header"/>
    <Separator/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="130.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0"/>
        </columnConstraints>

        <children>
            <Label text="Day of Week:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="dayComboBox" prefWidth="250"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Period Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Spinner fx:id="periodSpinner" prefWidth="100" editable="true"
                     GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Start Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <HBox spacing="8" alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <Spinner fx:id="startHour" prefWidth="80" editable="true"/>
                <Label text=":" style="-fx-font-weight: bold;"/>
                <Spinner fx:id="startMin" prefWidth="80" editable="true"/>
            </HBox>

            <Label text="End Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <HBox spacing="8" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Spinner fx:id="endHour" prefWidth="80" editable="true"/>
                <Label text=":" style="-fx-font-weight: bold;"/>
                <Spinner fx:id="endMin" prefWidth="80" editable="true"/>
            </HBox>
        </children>
    </GridPane>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="90"
                styleClass="tg-btn, tg-btn-secondary"/>
        <Button text="Update Slot" onAction="#handleUpdate" prefWidth="130"
                styleClass="tg-btn, tg-btn-primary"/>
    </HBox>
</VBox>