<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootPane" minHeight="750.0" minWidth="1200.0" prefHeight="750.0" prefWidth="1200.0"
      stylesheets="@../../style/login.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.auth.changePasswordController">

    <StackPane styleClass="image-section" HBox.hgrow="ALWAYS">
        <VBox alignment="BOTTOM_LEFT" spacing="10">
            <padding>
                <Insets bottom="60" left="60" right="60" top="60"/>
            </padding>
            <Label styleClass="image-title" text="Secure Your Account"/>
            <Label maxWidth="400" styleClass="image-description"
                   text="Update your credentials to keep your timetable data safe and protected." wrapText="true"/>
        </VBox>
    </StackPane>

    <VBox alignment="CENTER" minWidth="450.0" prefWidth="450.0" spacing="30.0" styleClass="login-section">
        <padding>
            <Insets bottom="40.0" left="60.0" right="60.0" top="40.0"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <ImageView fitHeight="36.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../assets/icon/app_icon.png"/>
                </image>
            </ImageView>
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Timetable Generator"/>
        </HBox>

        <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label styleClass="header-text" text="Change Password"/>
            <Label styleClass="subheader-text" text="For security, please set a new password for your account."/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox spacing="8.0">
                <Label styleClass="field-label" text="New Password"/>
                <PasswordField fx:id="newPasswordField" promptText="••••••••" styleClass="input-field"/>
            </VBox>

            <VBox spacing="8.0">
                <Label styleClass="field-label" text="Confirm Password"/>
                <PasswordField fx:id="confirmPasswordField" promptText="••••••••" styleClass="input-field"/>
            </VBox>
        </VBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 13px;" text="" wrapText="true"/>
        <Button fx:id="updateButton" maxWidth="Infinity" onAction="#updatePassword"
                styleClass="primary-button" text="Update and Login"/>

        <HBox alignment="CENTER" spacing="5.0">
            <Hyperlink onAction="#goLandingPage" styleClass="footer-link" text="Back to Login"/>
        </HBox>
    </VBox>
</HBox>