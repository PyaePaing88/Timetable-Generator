<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>

<HBox fx:id="rootPane" prefHeight="500.0" prefWidth="1000.0"
      stylesheets="@../../style/login.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.auth.authController">

    <StackPane HBox.hgrow="ALWAYS" styleClass="image-section">
        <VBox alignment="BOTTOM_LEFT" spacing="10">
            <padding>
                <Insets bottom="60" left="60" right="60" top="60"/>
            </padding>
            <Label text="Timetable Generator" styleClass="image-title" />
            <Label text="Experience the power of streamlined workflows and elegant design."
                   styleClass="image-description" wrapText="true" maxWidth="400" />
        </VBox>
    </StackPane>

    <VBox alignment="CENTER" spacing="30.0" minWidth="450.0" prefWidth="450.0" styleClass="login-section">
        <padding>
            <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <SVGPath content="M12 2L2 19.77h20L12 2zm0 3.5l7.5 13.27H4.5L12 5.5z"
                     fill="BLACK" scaleX="1.5" scaleY="1.5" />
            <Label text="Timetable Generator" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        </HBox>

        <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Welcome Back" styleClass="header-text" />
            <Label text="Enter your credentials to access your account" styleClass="subheader-text" />
        </VBox>

        <VBox spacing="20.0" alignment="CENTER_LEFT">
            <VBox spacing="8.0">
                <Label text="Email Address" styleClass="field-label" />
                <TextField fx:id="emailField" promptText="name@company.com" styleClass="input-field" />
            </VBox>

            <VBox spacing="8.0">
                <HBox alignment="CENTER_LEFT">
                    <Label text="Password" styleClass="field-label" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Hyperlink text="Forgot password?" styleClass="forgot-link" />
                </HBox>
                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="input-field" />
            </VBox>
        </VBox>

        <Label fx:id="messageLabel"
               text=""
               wrapText="true"
               style="-fx-text-fill: red; -fx-font-size: 13px;" />
        <Button fx:id="loginButton" text="Sign In" maxWidth="Infinity"
                styleClass="primary-button" onAction="#login" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Don't have an account?" styleClass="footer-text" />
            <Hyperlink text="Back" styleClass="footer-link" onAction="#goLandingPage"/>
        </HBox>
    </VBox>
</HBox>