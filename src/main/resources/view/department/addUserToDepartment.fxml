<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefWidth="700.0" prefHeight="500.0" spacing="15" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.department.addUserToDeptController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add Teachers to Department" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Available Teachers (No Department)"/>
            <TableView fx:id="allUsersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colAllUserName" text="Teacher Name" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>

        <VBox alignment="CENTER" spacing="15">
            <Button text="→" onAction="#moveToDept" prefWidth="40" style="-fx-font-weight: bold;"/>
            <Button text="←" onAction="#moveFromDept" prefWidth="40" style="-fx-font-weight: bold;"/>
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Department Teachers"/>
            <TableView fx:id="deptUsersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colDeptUserName" text="Teacher Name" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="80" styleClass="btn-secondary"/>
        <Button text="Save Changes" onAction="#handleSave" prefWidth="120"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    </HBox>
</VBox>