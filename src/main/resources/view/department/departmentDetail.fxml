<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0"
      prefWidth="500.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetablegenerator.controller.department.departmentDetailController">
    <children>
        <Label text="User Profile Details">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <Separator />
        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <children>
                <Label text="Class ID:" GridPane.rowIndex="0" />
                <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Full Name:" GridPane.rowIndex="1" />
                <TextField fx:id="txtName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Close" onAction="#closeWindow" prefWidth="80.0" />
        </HBox>
    </children>
    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
</VBox>